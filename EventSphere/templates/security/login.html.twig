{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block body %}

<!-- Login Form Section Begin -->
<section class="contact-from-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Log in</h2>
                    <p><i class="fas fa-user-tie"></i> Suit up! Time to enter the command center!</p>
                    <div class="row mt-1">
                        <div class="col-lg-12 text-center">
                            <p>Don't have an account? <a class="site-btn" href="{{ path('app_register') }}"><i class="fa fa-user-plus"></i> Register here</a>.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form method="post" action="{{ path('app_login') }}" class="comment-form contact-form">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <div class="row">
                        <div class="col-lg-6 form-group">
                            <label for="_username"><i class="fas fa-at"></i> Email</label>
                            <input type="email" value="{{ last_username }}" name="_username" id="inputEmail" class="form-control" placeholder="xxx@xxx.xx" required autofocus>
                        </div>
                        <div class="col-lg-6 form-group">
                            <label for="_password"><i class="fas fa-key"></i> Password</label>
                            <input type="password" name="_password" id="inputPassword" class="form-control" placeholder="xxxxxxxx" required>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="col-lg-12 text-center">
                            <button type="submit" class="site-btn"><i class="fas fa-right-to-bracket"></i> Sign in</button>
                        </div>
                    </div>
                </form>
            </div> 
        </div>
    </div>
</section>
<!-- Login Form Section End -->

{% endblock %}
