{# templates/event/create.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Create Event{% endblock %}

{% block body %}
<!-- Event Creation Form Section Begin -->
<section class="contact-from-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Create Event</h2>
                    <p><i class="fa fa-comments-o"></i> Let's get this party started: create your epic event here!</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                {# Display flash messages #}
                {% for label, messages in app.flashes %}
                    <div class="alert alert-{{ label }}">
                        {% for message in messages %}
                            <p>{{ message|raw }}</p>
                        {% endfor %}
                    </div>
                {% endfor %}

                {{ form_start(eventForm, {'attr': {'class': 'comment-form contact-form'}}) }}
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                {{ form_widget(eventForm.title, {'attr': {'class': 'form-control', 'placeholder': 'Title'}}) }}
                                {{ form_errors(eventForm.title) }}
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                {{ form_widget(eventForm.maxParticipants, {'attr': {'class': 'form-control', 'placeholder': 'Max participants'}}) }}
                                {{ form_errors(eventForm.maxParticipants) }}
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                {{ form_widget(eventForm.description, {'attr': {'class': 'form-control', 'placeholder': 'Description'}}) }}
                                {{ form_errors(eventForm.description) }}
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                {{ form_widget(eventForm.dateTime, {'attr': {'class': 'form-control', 'placeholder': 'Date and Time'}}) }}
                                {{ form_errors(eventForm.dateTime) }}
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <label for="eventForm_isPublic" class="form-check-label">Public Event</label>
                                    </div>
                                    <div class="col-lg-6">
                                        <div style="height: 50%;">
                                            {{ form_widget(eventForm.isPublic) }}
                                        </div>
                                    </div>
                                </div>
                                {{ form_errors(eventForm.isPublic) }}
                            </div>
                        </div>
                        <div class="col-lg-12 text-center">
                            <button type="submit" class="site-btn"><i class="fa fa-plus"></i> Create Event</button>
                        </div>
                    </div>
                {{ form_end(eventForm) }}
            </div> 
        </div>
    </div>
</section>
<!-- Event Creation Form Section End -->
{% endblock %}
