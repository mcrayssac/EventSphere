{# templates/event/create.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Create Event{% endblock %}

{% block body %}
<!-- Event Creation Form Section Begin -->
<section class="contact-from-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Create Event</h2>
                    <p><i class="fas fa-comments"></i> Let's get this party started: create your epic event here!</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                {# Display flash messages #}
                {% for label, messages in app.flashes %}
                    <div class="alert alert-{{ label }}">
                        {% for message in messages %}
                            <p>{{ message|raw }}</p>
                        {% endfor %}
                    </div>
                {% endfor %}

                {{ form_start(eventForm, {'attr': {'class': 'comment-form contact-form'}}) }}
                    <div class="row">
                        <div class="col-lg-6 form-group">
                            <label for="title"><i class="fas fa-heading"></i> Title</label>
                            {{ form_widget(eventForm.title, {'attr': {'class': 'form-control', 'placeholder': 'Insane festival...'}}) }}
                            {{ form_errors(eventForm.title) }}
                        </div>
                        <div class="col-lg-6 form-group">
                            <label for="maxParticipants"><i class="fas fa-arrow-up"></i> Max participants</label>
                            {{ form_widget(eventForm.maxParticipants, {'attr': {'class': 'form-control', 'placeholder': 'Number of participants', 'min': '0'}}) }}
                            {{ form_errors(eventForm.maxParticipants) }}
                        </div>
                        <div class="col-lg-6 form-group">
                            <label for="dateTime"><i class="fas fa-clock"></i> Date and time</label>
                            {{ form_widget(eventForm.dateTime, {'attr': {'class': 'form-control', 'placeholder': 'Date and Time'}}) }}
                            {{ form_errors(eventForm.dateTime) }}
                        </div>
                        <div class="col-lg-6 form-group">
                            <label for="isPublic"><i class="fas fa-lock-open"></i> Public Event</label>
                            {{ form_widget(eventForm.isPublic) }}
                            {{ form_errors(eventForm.isPublic) }}
                        </div>
                        <div class="col-lg-6 form-group">
                            <label for="isPaid"><i class="fas fa-coins"></i> Is paid</label>
                            {{ form_widget(eventForm.isPaid, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(eventForm.isPaid) }}
                        </div>
                        <div class="col-lg-6 form-group">
                            <label for="cost"><i class="fas fa-money-bill-wave"></i> Cost in </label>
                            {{ form_widget(eventForm.cost, {'attr': {'class': 'form-control', 'placeholder': 'Cost (if paid)'}}) }}
                            {{ form_errors(eventForm.cost) }}
                        </div>
                        <div class="col-lg-12 form-group">
                            <label for="description"><i class="fas fa-scroll"></i> Description</label>
                            {{ form_widget(eventForm.description, {'attr': {'class': 'form-control', 'placeholder': 'Wonderful event on...'}}) }}
                            {{ form_errors(eventForm.description) }}
                        </div>
                        <div class="col-lg-12 text-center">
                            <button type="submit" class="site-btn"><i class="fas fa-plus"></i> Create Event</button>
                        </div>
                    </div>
                {{ form_end(eventForm) }}
            </div> 
        </div>
    </div>
</section>
<!-- Event Creation Form Section End -->
{% endblock %}
