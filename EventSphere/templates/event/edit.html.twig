{% extends 'base.html.twig' %}

{% block title %}Edit Event{% endblock %}

{% block body %}
<!-- Edit Event Form Section Begin -->
<section class="contact-from-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Edit Event</h2>
                    <p><i class="fas fa-calendar-alt"></i> Update your event details below!</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                {% for label, messages in app.flashes %}
                    <div class="alert alert-{{ label }}">
                        {% for message in messages %}
                            <p>{{ message|raw }}</p>
                        {% endfor %}
                    </div>
                {% endfor %}

                {{ form_start(eventForm, {'attr': {'class': 'comment-form contact-form'}}) }}
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                {{ form_widget(eventForm.title, {'attr': {'class': 'form-control', 'placeholder': 'Title'}}) }}
                                {{ form_errors(eventForm.title) }}
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                {{ form_widget(eventForm.description, {'attr': {'class': 'form-control', 'placeholder': 'Description'}}) }}
                                {{ form_errors(eventForm.description) }}
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                {{ form_widget(eventForm.dateTime, {'attr': {'class': 'form-control', 'placeholder': 'Date and Time'}}) }}
                                {{ form_errors(eventForm.dateTime) }}
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                {{ form_widget(eventForm.maxParticipants, {'attr': {'class': 'form-control', 'placeholder': 'Max Participants'}}) }}
                                {{ form_errors(eventForm.maxParticipants) }}
                            </div>
                        </div>
                        <div class="col-lg-2">
                            <label for="eventForm_isPublic" class="form-check-label"><i class="fas fa-lock-open"></i> Public Event</label>
                        </div>
                        <div class="col-lg-1">
                            <div class="form-group">
                                {{ form_widget(eventForm.isPublic, {'attr': {'class': 'form-control', 'placeholder': 'Is Public'}}) }}
                                {{ form_errors(eventForm.isPublic) }}
                            </div>
                        </div>
                        <div class="col-lg-12 text-center">
                            <button type="submit" class="site-btn"><i class="fas fa-user-pen"></i> Update Event</button>
                        </div>
                    </div>
                {{ form_end(eventForm) }}
            </div>
        </div>
    </div>
</section>
<!-- Edit Event Form Section End -->
{% endblock %}
