{% extends 'base.html.twig' %}

{% block title %}Event Detail{% endblock %}

{% block body %}
<section class="event-detail spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>{{ event.title }}</h2>
                    <div class="breadcrumb-text">
                        <div class="bt-option">
                            <a href="{{ path('app_events') }}">Events</a>
                            <span>{{ event.title }}</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="speaker-item">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="si-pic">
                                <img src="{{ asset('custom/img/Placeholder.png') }}" alt="">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="si-text">
                                <div class="si-title">
                                    <h4>{{ event.title }}</h4>
                                    <span>Event</span>
                                </div>
                                <div class="si-social">
                                    <a href="#"><i class="fa fa-facebook"></i></a>
                                    <a href="#"><i class="fa fa-twitter"></i></a>
                                    <a href="#"><i class="fa fa-google-plus"></i></a>
                                </div>
                                <p>{{ event.description }}</p>
                                <ul class="sc-widget">
                                    <li><i class="fa fa-clock-o"></i> {{ event.dateTime|date('M d, Y H:i') }}</li>
                                    <li><i class="fa fa-user"></i> Max participants: {{ event.maxParticipants }}</li>
                                    <li><i class="fa fa-check"></i> Public: {{ event.isPublic ? 'Yes' : 'No' }}</li>
                                </ul>
                                <a href="#" class="btn btn-primary">Register</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
