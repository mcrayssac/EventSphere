{% extends 'base.html.twig' %}

{% block title %}Event Payment{% endblock %}

{% block body %}
<section class="event-payment spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Event Payment</h2>
                    <p><i class="fas fa-clipboard-check"></i> No reason needed to subscribe!</p>
                </div>
                {{ form_start(paymentForm, {'attr': {'class': 'comment-form contact-form'}}) }}
                    <div class="row">
                        <div class="col-lg-12 form-group">
                            <label for="title"><i class="fas fa-credit-card"></i> Card number</label>
                            {{ form_widget(paymentForm.cardNumber, {'attr': {'class': 'form-control', 'placeholder': 'XXXX-XXXX-XXXX-XXXX'}}) }}
                            {{ form_errors(paymentForm.cardNumber) }}
                        </div>
                        <div class="col-lg-4 form-group">
                            <label for="title"><i class="fas fa-money-check"></i> Expiration month</label>
                            {{ form_widget(paymentForm.expMonth, {'attr': {'class': 'form-control', 'placeholder': 'MM'}}) }}
                            {{ form_errors(paymentForm.expMonth) }}
                        </div>
                        <div class="col-lg-4 form-group">
                            <label for="title"><i class="fas fa-money-check"></i> Expiration year</label>
                            {{ form_widget(paymentForm.expYear, {'attr': {'class': 'form-control', 'placeholder': 'YYYY'}}) }}
                            {{ form_errors(paymentForm.expYear) }}
                        </div>
                        <div class="col-lg-4 form-group">
                            <label for="title"><i class="fas fa-money-check"></i> Card verification code</label>
                            {{ form_widget(paymentForm.cvc, {'attr': {'class': 'form-control', 'placeholder': 'CVC'}}) }}
                            {{ form_errors(paymentForm.cvc) }}
                        </div>
                        <div class="col-lg-12 text-center">
                            <button type="submit" class="site-btn"><i class="fas fa-circle-dollar-to-slot"></i> Pay Now</button>
                        </div>
                    </div>
                {{ form_end(paymentForm) }}
            </div>
        </div>
    </div>
</section>
{% endblock %}
