{% extends 'base.html.twig' %}

{% block title %}Subscription{% endblock %}

{% block body %}
<section class="schedule-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Your subscription(s)</h2>
                    <p><i class="fas fa-fire"></i> Buckle up, it's time to see what fun awaits!</p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">

                <div class="schedule-tab">
                    <!-- Tab panes -->
                    <div class="tab-content">

                        <div class="tab-pane active" id="tabs-4" role="tabpanel">
                            {% for event in events %}
                            <div class="st-content" style="cursor: pointer;" onclick="window.location='{{ path('app_event_detail', {'id': event.id}) }}';">
                                <div class="row align-items-center">
                                    <div class="col-lg-3">
                                        <div class="sc-pic">
                                            <img src="{{ asset('custom/img/Placeholder.png') }}" alt="">
                                        </div>
                                    </div>
                                    <div class="col-lg-5">
                                        <div class="sc-text">
                                            <h4><i class="fas fa-calendar"></i> {{ event.title }}</h4>
                                            <p><i class="fas fa-pen-to-square"></i> {{ event.description }}</p>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <ul class="sc-widget">
                                            <li><i class="fas fa-clock"></i> {{ event.dateTime|date('M d, Y H:i') }}</li>
                                            <li><i class="fas fa-user"></i> Remaining places: {{ event.remainingPlaces }}</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            {% else %}
                            <p>You are not subscribed to any events my guy..</p>
                            {% endfor %}
                        </div>
                       
                    </div>
                </div>

            </div>
        </div>

    </div>
</section>
{% endblock %}
