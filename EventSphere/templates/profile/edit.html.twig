{% extends 'base.html.twig' %}

{% block title %}Edit Profile{% endblock %}

{% block body %}
<!-- Profile Form Section Begin -->
<section class="contact-from-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Edit Profile</h2>
                    <p><i class="fas fa-user-ninja"></i> Sharpen your details like a ninja - precision is key!</p>
                    <div class="row mt-1">
                        <div class="col-lg-12 text-center">
                            <p><a class="site-btn" href="{{ path('app_logout') }}"><i class="fa fa-rocket"></i> Rocketing out!</a> See you among the stars, astronaut!</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                {# Display flash messages #}
                {% for label, messages in app.flashes %}
                    <div class="alert alert-{{ label }}">
                        {% for message in messages %}
                            <p>{{ message|raw }}</p>
                        {% endfor %}
                    </div>
                {% endfor %}

                {{ form_start(profileForm, {'attr': {'class': 'comment-form contact-form'}}) }}
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                {{ form_widget(profileForm.firstName, {'attr': {'class': 'form-control', 'placeholder': 'First Name'}}) }}
                                {{ form_errors(profileForm.firstName) }}
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                {{ form_widget(profileForm.lastName, {'attr': {'class': 'form-control', 'placeholder': 'Last Name'}}) }}
                                {{ form_errors(profileForm.lastName) }}
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                {{ form_widget(profileForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                                {{ form_errors(profileForm.email) }}
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                {{ form_widget(profileForm.currentPassword, {'attr': {'class': 'form-control', 'placeholder': 'Current Password'}}) }}
                                {{ form_errors(profileForm.currentPassword) }}
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                {{ form_widget(profileForm.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'New Password'}}) }}
                                {{ form_errors(profileForm.plainPassword.first) }}
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                {{ form_widget(profileForm.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Confirm New Password'}}) }}
                                {{ form_errors(profileForm.plainPassword.second) }}
                            </div>
                        </div>
                        <div class="col-lg-12 text-center">
                            <button type="submit" class="site-btn"><i class="fas fa-user-pen"></i> Update Profile</button>
                        </div>
                    </div>
                {{ form_end(profileForm) }}
            </div> 
        </div>
    </div>
</section>
<!-- Profile Form Section End -->
{% endblock %}
